    "compilerOptions": {
        "strict": true,
        "module": "esnext",
        "target": "es6",
        "lib": ["DOM", "ES6"],
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "watch": true
    },
    "include": ["./src", "index.d.ts"],
    "exclude": ["./src/**/*.ignore.tsx", "./backend", "./node_modules"]
}
